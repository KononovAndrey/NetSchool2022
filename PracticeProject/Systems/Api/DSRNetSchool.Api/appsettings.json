{
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "Main": {
    "MainUrl": "http://localhost"
  },

  "Swagger": {
    "Enabled": true,
    "OAuthClientId": "",
    "OAuthClientSecret": ""
  },

  "ApiSpecial": {
    "HelloMessage": "Hello, DSR NetSchool!"
  }

}
